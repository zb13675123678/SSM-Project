<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.dao.PermissionsDao">

    <resultMap type="com.qfedu.entity.Permissions" id="PermissionsMap">
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="pname" column="pname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PermissionsMap">
        select
          pid, pname
        from supermarket.permissions
        where pid = #{pid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PermissionsMap">
        select
          pid, pname
        from supermarket.permissions
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PermissionsMap">
        select
          pid, pname
        from supermarket.permissions
        <where>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="pname != null and pname != ''">
                and pname = #{pname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pid" useGeneratedKeys="true">
        insert into supermarket.permissions(pname)
        values (#{pname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update supermarket.permissions
        <set>
            <if test="pname != null and pname != ''">
                pname = #{pname},
            </if>
        </set>
        where pid = #{pid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from supermarket.permissions where pid = #{pid}
    </delete>

</mapper>