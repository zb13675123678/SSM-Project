<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qfedu.dao.EmpRoleDao">

    <resultMap type="com.qfedu.entity.EmpRole" id="EmpRoleMap">
        <result property="eid" column="eid" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmpRoleMap">
        select
          eid, rid
        from supermarket.emp_role
        where eid = #{eid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmpRoleMap">
        select
          eid, rid
        from supermarket.emp_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EmpRoleMap">
        select
          eid, rid
        from supermarket.emp_role
        <where>
            <if test="eid != null">
                and eid = #{eid}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="eid" useGeneratedKeys="true">
        insert into supermarket.emp_role()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update supermarket.emp_role
        <set>
        </set>
        where eid = #{eid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from supermarket.emp_role where eid = #{eid}
    </delete>

</mapper>